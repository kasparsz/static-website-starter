{
  "name": "static-website-starter",
  "version": "1.0.0",
  "author": "Kaspars Zuks (https://github.com/kasparsz)",
  "license": "MIT",
  "website": "https://github.com/kasparsz/static-website-starter",
  "bugs": {
    "url": "https://github.com/kasparsz/static-website-starter/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kasparsz/static-website-starter.git"
  },
  "keywords": [
    "buble", "rollup", "sass", "postcss", "nunjucks", "static", "starter"
  ],
  "engines": {
    "node": ">= 4.2.1",
    "npm": ">= 3"
  },

  "scripts": {
    "watch:js": "rollup -w -c rollup.js -i src/javascripts/main.js -o $npm_package_config_output/javascripts/main.js -m $npm_package_config_output/javascripts/main.js.map",

    "watch:css-compile": "node-sass --source-map=true --source-map-contents=true --include-path src/stylesheets src/stylesheets/*.scss -o $npm_package_config_output/stylesheets-sass -w -r",
    "watch:css-compress": "postcss -w $npm_package_config_output/stylesheets-sass/ -c postcss.js -d $npm_package_config_output/stylesheets/ $npm_package_config_output/stylesheets-sass/*.css",
    "watch:css": "npm-run-all --parallel watch:css-compile watch:css-compress",

    "watch:html": "nunjucks \"*.@(twig|html|tpl|nunjuck)\" -w -p src/html -o $npm_package_config_output",
    "watch:static": "cpx src/static/**/* $npm_package_config_output -p -w",

    "build:js-compile": "rollup -c rollup.js -i src/javascripts/main.js -o $npm_package_config_output/javascripts/main.js -m $npm_package_config_output/javascripts/main.js.map",
    "build:js-compress": "uglifyjs $npm_package_config_output/javascripts/main.js --source-map $npm_package_config_output/javascripts/main.js.map --in-source-map $npm_package_config_output/javascripts/main.js.map --source-map-url main.js.map --output $npm_package_config_output/javascripts/main.js --compress --mangle",
    "build:js": "npm-run-all build:js-compile build:js-compress",

    "build:css-compile": "node-sass --source-map=true --source-map-contents=true --include-path src/stylesheets src/stylesheets/*.scss -o $npm_package_config_output/stylesheets-sass -r",
    "build:css-compress": "postcss -c postcss.js -d $npm_package_config_output/stylesheets/ $npm_package_config_output/stylesheets-sass/*.css",
    "build:css-clean": "del $npm_package_config_output/stylesheets-sass",
    "build:css": "npm-run-all build:css-compile build:css-compress",

    "build:html": "nunjucks \"*.@(twig|html|tpl|nunjuck)\" -p src/html -o $npm_package_config_output",
    "build:static": "cpx src/static/**/* $npm_package_config_output -p",

    "server": "live-server $npm_package_config_output --wait=16 --port=$npm_package_config_port",
    "clean": "del $npm_package_config_output/*",

    "development": "npm-run-all --parallel build:js build:css build:html && npm-run-all --parallel watch:js watch:css watch:html watch:static server",
    "production": "npm run clean && npm-run-all --parallel build:js build:css build:html && npm run build:css-clean",

    "watch": "npm run development",
    "prepublish": "npm run production"
  },
  "dependencies": {
    "buble": "^0.15.1",
    "cpx": "^1.5.0",
    "cssnano-cli": "^1.0.5",
    "del-cli": "^0.2.1",
    "live-server": "^1.1.0",
    "node-sass": "^4.1.1",
    "npm-run-all": "^4.0.0",
    "nunjucks-cli": "^0.4.9",
    "postcss-cli": "^2.6.0",
    "postcss-scss": "^0.4.0",
    "precss": "^1.4.0",
    "rollup": "^0.40.0",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-watch": "^3.1.0",
    "uglify-js": "^2.7.5"
  },
  "config": {
    "output": "public",
    "port": "8080"
  }
}
